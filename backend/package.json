    "@types/node": "^20.14.2",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.4.5",
    "vitest": "^1.0.0"
